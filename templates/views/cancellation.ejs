<html>

<head>
    <title>Reset password - The Basic Co</title>
    <%- include('../partials/head.ejs') %>
</head>

<body>
    <div class="container mx-auto h-screen bg-neutral-50">
        <%# include('../partials/navbar.ejs') %>
            <nav class="w-full h-12 flex items-center">
                <span>&#8592;</span>
                <a href="/" class="ml-2">Back to home</a>
            </nav>
            <div class="w-max flex-center mx-auto p-4 mt-24 flex-col bg-white rounded-lg shadow-lg">
                <h1 class="font-extrabold">Cancel Order</h1>
                <p class="text-gray-400 text-sm mt-2">Enter the following details to cancel your order.</p>

                <% if(err.length) {%>
                    <p class="text-red-500 font-bold my-4 text-sm">
                        <%= err %>
                    </p>
                    <% } else if (success.length) {%>
                        <p class="text-green-500 font-bold my-4 text-sm">
                            <%= success %>
                        </p>
                        <% } %>

                            <form action="/order/cancel" method="POST" class="mt-6 flex-center flex-col">
                                <label for="orderid" class="font-bold">Order ID <span
                                        class="text-red-500">*</span></label>
                                <input placeholder="TBC-1a2b3c..." required
                                    class="border-b-solid border-b-2 w-64 px-4 py-2 border-b-orange-400" type="text"
                                    name="orderId" id="orderId">

                                <label for="c_password" class="font-bold block mt-8 mb-2">Confirm Password <span
                                        class="text-red-500">*</span></label>
                                <select required name="reason" id="reason" class="px-4 bg-orange-50 py-2 rounded-full">
                                    <option value="">Select a reason</option>
                                    <option value="found cheaper alternative">Found a cheaper alternative</option>
                                    <option value="placed by mistake">Placed order by mistake</option>
                                    <option value="delivery time is high">Delivery time is high</option>
                                    <option value="don't need the product">Don't need the product anymore</option>
                                </select>

                                <button type="submit"
                                    class="w-48 h-10 bg-orange-500 hover:bg-orange-600 text-white font-bold mt-10">SUBMIT</button>
                            </form>
            </div>
    </div>
</body>

</html>